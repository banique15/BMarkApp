---
interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - LLM Consensus Benchmark</title>
    <meta name="description" content="Compare single-word responses from multiple LLMs and visualize their consensus" />
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-bold text-gray-900">
            <a href="/" class="hover:text-blue-600 transition-colors">LLM Consensus Benchmark</a>
          </h1>
          <nav class="flex space-x-4">
            <a 
              href="/" 
              class={`px-3 py-2 rounded-md text-sm font-medium ${currentPath === '/' ? 'bg-blue-100 text-blue-700' : 'text-gray-700 hover:bg-gray-100'}`}
            >
              Benchmark
            </a>
            <a 
              href="/history" 
              class={`px-3 py-2 rounded-md text-sm font-medium ${currentPath === '/history' ? 'bg-blue-100 text-blue-700' : 'text-gray-700 hover:bg-gray-100'}`}
            >
              History
            </a>
            <a 
              href="/settings" 
              class={`px-3 py-2 rounded-md text-sm font-medium ${currentPath === '/settings' ? 'bg-blue-100 text-blue-700' : 'text-gray-700 hover:bg-gray-100'}`}
            >
              Settings
            </a>
          </nav>
        </div>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="text-gray-500 text-sm mb-4 md:mb-0">
            &copy; 2025 LLM Consensus Benchmark
          </div>
          <div class="flex space-x-6">
            <a href="https://github.com" target="_blank" class="text-gray-500 hover:text-gray-700">
              GitHub
            </a>
            <a href="/docs" class="text-gray-500 hover:text-gray-700">
              Documentation
            </a>
            <a href="https://openrouter.ai" target="_blank" class="text-gray-500 hover:text-gray-700">
              OpenRouter
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
